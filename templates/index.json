{
  "sections": {
    "rich_text_section_1": {
      "type": "rich_text_section",
      "settings": {
        "spacing": {
          "padding": "40px 20px"
        },
        "layout": {
          "flex-direction": "row",
          "gap": "20px",
          "justify-content": "center",
          "align-items": "center",
        },
        "color_scheme": "scheme-1"
      },
      "blocks": {
        "group_block_1": {
          "type": "group_block",
          "settings": {
            "size": {
              "width": "100%",
              "flex-grow": "1"
            },
            "spacing": {
              "padding": "20px"
            },
            "layout": {
              "flex-direction": "row",
              "flex-wrap": "nowrap",
              "gap": "20px",
              "justify-content": "center",
              "align-items": "center",
            },
            "color_scheme": "scheme-1"
          },
          "blocks": {
            "heading_block_1": {
              "type": "heading_block",
              "settings": {
                "heading": "Welcome to our shop",
                "heading_size": "h1",
                "alignment": "center"  // Ensuring a valid default
              }
            },
            "text_block_1": {
              "type": "text_block",
              "settings": {
                "text": "<p>Discover our latest products and offers</p>"
              }
            },
            "button_block_1": {
              "type": "button_block",
              "settings": {
                "button_label": "Shop Now",
                "button_link": "#"
              }
            }
          },
          "block_order": [
            "heading_block_1",
            "text_block_1",
            "button_block_1"
          ]
        },
        "group_block_2": {
          "type": "group_block",
          "settings": {
            "size": {
              "width": "50%",
              "flex-grow": "0",
            },
            "spacing": {
              "padding": "50px",
            },
            "layout": {
              "flex-direction": "column",
              "align-items": "flex-start"
            },
            "color_scheme": "scheme-3"
          },
          "blocks": {
            "heading_block_2": {
              "type": "heading_block",
              "settings": {
                "heading": "Latest News",
                "heading_size": "h2",
                "alignment": "left"  // Ensuring a valid default
              }
            },
            "text_block_2": {
              "type": "text_block",
              "settings": {
                "text": "<p>Stay updated with our latest news and updates.</p>"
              }
            }
          },
          "block_order": [
            "heading_block_2",
            "text_block_2"
          ]
        }
      },
      "block_order": [
        "group_block_1",
        "group_block_2"
      ]
    }
  },
  "order": [
    "rich_text_section_1"
  ]
}
